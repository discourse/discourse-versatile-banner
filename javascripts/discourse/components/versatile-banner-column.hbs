{{#if (or @icon @columnContent)}}
  <div class="{{@columnClass}} single-box">
    {{#if @icon}}
      <div class="icon">
        {{#if this.isHttpLink}}
          <img class="responsive-img" src={{@icon}} alt="Icon" />
        {{else}}
          {{d-icon @icon}}
        {{/if}}
      </div>
    {{/if}}
    {{#if @columnContent}}
      <div>
        {{html-safe @columnContent}}
      </div>
    {{/if}}
  </div>
{{/if}}